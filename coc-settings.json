{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "json"
  ],
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        ".ccls-root",
        "compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
